<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
        >

    <ui:with field="res" type="online.shashki.rus.client.resources.AppResources"/>

    <g:HTMLPanel>
        <b:Button ui:field="newGameButton" size="LARGE">Новая игра</b:Button>

        <b:Container>
            <b:Row>
                <g:SimplePanel ui:field="play" visible="false"/>
            </b:Row>
        </b:Container>

        <b:Container>
            <b:Row>
                <g:SimplePanel ui:field="playShowPanel"/>
            </b:Row>
        </b:Container>
    </g:HTMLPanel>
</ui:UiBinder>
