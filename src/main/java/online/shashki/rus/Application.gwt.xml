<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
        "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to='Application'>
    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.gwtplatform.mvp.MvpWithEntryPoint"/>
    <inherits name="com.google.web.bindery.autobean.AutoBean"/>
    <inherits name="org.gwtbootstrap3.GwtBootstrap3"/>
    <inherits name="com.google.gwt.websockets.WebSockets"/>
    <inherits name="com.ait.lienzo.Lienzo"/>

    <extend-configuration-property name="gin.ginjector.modules"
                                   value="online.shashki.rus.client.gin.ClientModule"/>

    <!-- Use ClientFactoryImpl by default -->
    <replace-with class="online.shashki.rus.client.ClientFactoryImpl">
        <when-type-is class="online.shashki.rus.client.ClientFactory"/>
    </replace-with>

    <!-- Specify the paths for translatable code                    -->
    <source path='client'/>
    <source path='shared'/>
    <source path='shashki'/>

    <set-configuration-property name="CssResource.enableGss" value="true"/>
    <set-configuration-property name="CssResource.legacy" value="true" />
</module>
