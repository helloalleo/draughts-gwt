<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="online.shashki.rus.client.resources.AppResources"/>

    <g:HTMLPanel ui:field="main">
        <g:HTMLPanel ui:field="shashkiColumn" addStyleNames="{res.style.shashkiColumn}">
            <g:HTMLPanel ui:field="shashki"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="notationColumn" addStyleNames="{res.style.notationColumn}">
            <ui:msg description="Ход" key="turn">
                <b>Ход:</b>
            </ui:msg>
            <g:HTML ui:field="turnLabel" text="Игра не началась">
                <ui:attribute name="text"/>
            </g:HTML>
            <ui:msg description="Сбито шашек" key="beatDraughts">
                <b>Сбито шашек:</b>
            </ui:msg>
            <g:Label ui:field="beatenMineDraughtsLabel"/>
            <g:Label ui:field="beatenOpponentDraughtsLabel"/>
            <b:Button ui:field="cancelMove" text="Отменить ход" addStyleNames="btn btn-default btn-block">
                <ui:attribute name="text"/>
            </b:Button>
            <ui:msg description="Нотация" key="notationList">
                <b>Нотация:</b>
            </ui:msg>
            <g:HTMLPanel ui:field="notationList"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="playerListColumn" addStyleNames="{res.style.playerList}">
            <span>
                <b:Button ui:field="playButton" icon="REFRESH"
                          addStyleNames="btn btn-default btn-primary btn-block">
                    <ui:msg description="Подключиться" key="connectToPlayButton">Подключиться</ui:msg>
                </b:Button>
                <b:Button ui:field="drawButton" addStyleNames="btn btn-default btn-block btn-sm" visible="false">
                    <ui:msg description="Предложить ничью" key="drawButton">Предложить ничью</ui:msg>
                </b:Button>
                <b:Button ui:field="surrenderButton" addStyleNames="btn btn-default btn-block btn-sm"
                          visible="false">
                    <ui:msg description="Сдаться" key="surrenderButton">Сдаться</ui:msg>
                </b:Button>
            </span>
            <ui:msg description="Список игроков" key="playerFriendListLabel">
                <b>Недавно играли с вами:</b>
            </ui:msg>
            <g:ScrollPanel ui:field="playerFriendPanel"/>
            <ui:msg description="Список игроков" key="playerListLabel">
                <b>Список игроков:</b>
            </ui:msg>
            <g:ScrollPanel ui:field="playerPanel"/>
            <b:InputGroup>
                <b:InputGroupAddon icon="SEARCH"/>
                <b:TextBox placeholder="Поиск игроков" autoComplete="true" addStyleNames="{res.style.playerSearch}"/>
            </b:InputGroup>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
