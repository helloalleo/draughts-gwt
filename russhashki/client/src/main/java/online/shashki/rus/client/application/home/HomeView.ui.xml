<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:p="urn:import:online.shashki.rus.client.application.component.playshowpanel"
        >

    <ui:with field="res" type="online.shashki.rus.client.resources.AppResources"/>

    <g:HTMLPanel>
        <b.html:Strong ui:field="gameListLabel" text="Список игр" addStyleNames="{res.style.xLargeFont}"/>
        <b:Button ui:field="newGameButton" size="LARGE">Новая игра</b:Button>
        <b:CheckBoxButton ui:field="myGameListCheckButton" size="LARGE">Мои игры</b:CheckBoxButton>
        <b:ButtonGroup ui:field="showGameOnPageButtonGroup" pull="RIGHT">
            <b:Button ui:field="moreGameOnPage" size="LARGE" icon="ANGLE_LEFT" title="Показать меньше на странице"/>
            <b:Button ui:field="lessGameOnPage" size="LARGE" icon="ANGLE_RIGHT" title="Показать больше на странице"/>
        </b:ButtonGroup>
        <hr/>
        <g:SimplePanel ui:field="play" visible="false"/>
        <p:PlayShowPanel ui:field="playShowPanel"/>
    </g:HTMLPanel>
</ui:UiBinder>
