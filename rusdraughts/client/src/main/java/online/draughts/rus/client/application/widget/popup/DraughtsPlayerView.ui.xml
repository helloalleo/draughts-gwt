<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with field="res" type="online.draughts.rus.client.resources.AppResources"/>

    <g:PopupPanel ui:field="main" autoHideOnHistoryEventsEnabled="true" autoHideEnabled="true"
                  addStyleNames="{res.style.dialogBox} col-md-10">
        <g:HTMLPanel>
            <g:HTMLPanel>
                <b:Button ui:field="dismiss" icon="CLOSE" pull="RIGHT" type="LINK" addStyleNames="{res.style.playerDismiss}"/>
                <g:HTML ui:field="caption" addStyleNames="{res.style.dialogCaptionPlayer}"/>
            </g:HTMLPanel>

            <g:HTMLPanel ui:field="body">
                <b:Row>
                    <b:Column size="MD_5" ui:field="draughtsDeskColumn">
                        <g:SimplePanel ui:field="deskPanel"/>
                    </b:Column>
                    <b:Column size="MD_7">
                        <b:Row>
                            <b:Column size="MD_4">
                                <b:ButtonGroup addStyleNames="{res.style.playerControls}">
                                    <b:Button ui:field="toStartButton" icon="FAST_BACKWARD" size="SMALL"/>
                                    <b:Button ui:field="prevButton" icon="BACKWARD" size="SMALL"/>
                                    <b:Button ui:field="playButton" icon="PLAY" size="SMALL"/>
                                    <b:Button ui:field="nextButton" icon="FORWARD" size="SMALL"/>
                                    <b:Button ui:field="toEndButton" icon="FAST_FORWARD" size="SMALL"/>
                                </b:ButtonGroup>
                                <b:Heading size="H4" text="Сбито шашек"/>
                                <g:HTMLPanel ui:field="beatenDraughts">
                                    <g:Label ui:field="beatenMineDraughtsLabel" text="0 - Белых"
                                             addStyleNames="{res.style.emulatorDraughtsBeaten}"/>
                                    <g:Label ui:field="beatenOpponentDraughtsLabel" text="0 - Чёрных"
                                             addStyleNames="{res.style.emulatorDraughtsBeaten}"/>
                                </g:HTMLPanel>
                                <b:Heading size="H4" text="Нотация"/>
                                <g:ScrollPanel>
                                    <g:HTMLPanel ui:field="notationPanel"/>
                                </g:ScrollPanel>
                            </b:Column>
                            <b:Column size="MD_8">
                                <b:Heading size="H4" text="Все комментарии"/>
                                <g:ScrollPanel ui:field="gameCommentsScroll">
                                    <g:HTMLPanel ui:field="gameComments" addStyleNames="{res.style.gameCommentPanel}"/>
                                </g:ScrollPanel>

                                <b:Heading size="H4" text="Комментарии к ходу"/>
                                <g:ScrollPanel ui:field="currentStrokeCommentScroll">
                                    <g:HTMLPanel ui:field="currentStrokeComment"
                                                 addStyleNames="{res.style.strokeCommentPanel}"/>
                                </g:ScrollPanel>

                                <b:Heading size="H4" text="Комментировать ход"/>
                                <g:Label ui:field="logInToCommentLabel" text="Войдите, чтобы комментировать" visible="false"
                                        addStyleNames="{res.style.strokeCommentPanel}"/>
                                <b:TextArea ui:field="commentCurrentStrokeTextArea"/>
                                <b:Label ui:field="leftSymbolsLabel" addStyleNames="{res.style.leftSymbols}" pull="LEFT"/>
                                <b:Button ui:field="commentCurrentStrokeButton" pull="RIGHT" icon="PENCIL" text="Комментировать"/>
                            </b:Column>
                        </b:Row>
                    </b:Column>
                </b:Row>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
