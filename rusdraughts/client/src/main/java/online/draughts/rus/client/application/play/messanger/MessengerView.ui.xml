<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="online.draughts.rus.client.resources.AppResources"/>

    <g:PopupPanel autoHideOnHistoryEventsEnabled="true" autoHideEnabled="false" addStyleNames="{res.style.popupMessenger}">
        <g:HTMLPanel addStyleNames="{res.style.messenger}">
            <b:Panel>
                <b:PanelHeader ui:field="messengerHeader">
                    <b:Row>
                        <b:Column size="MD_10">
                            <b:Heading ui:field="messengerHeading" size="H4" text="Сообщения"/>
                        </b:Column>
                        <b:Column size="MD_2">
                            <b:Button ui:field="collapseMessengerButton" icon="CLOSE" type="LINK"/>
                        </b:Column>
                    </b:Row>
                </b:PanelHeader>
                <b:PanelBody ui:field="messengerBody">
                    <g:HTMLPanel ui:field="messages" addStyleNames="{res.style.messengerMessages}"/>
                    <b:TextArea ui:field="message" addStyleNames="{res.style.messengerMessage}" maxLength="250" placeholder="Введите сообщение"/>
                </b:PanelBody>
            </b:Panel>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
