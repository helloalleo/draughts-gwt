<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="online.draughts.rus.client.resources.AppResources"/>

    <g:HTMLPanel ui:field="panel">
        <g:HTMLPanel ui:field="whoAndWhenDidWin" addStyleNames="{res.style.whoAndWhenDidWin} pull-right">
            <g:HTML ui:field="playEndDate" addStyleNames="{res.style.playEndDate}"/>
            <g:HTML ui:field="whoDidWin" addStyleNames="{res.style.whoDidWin}"/>
        </g:HTMLPanel>
        <b:Image ui:field="endGameScreenshot"/>
        <g:HTML ui:field="whitePlayerName"/>
        <g:HTML ui:field="blackPlayerName"/>
        <b:Button ui:field="playGame" icon="PLAY_CIRCLE" addStyleNames="btn-link"/>
    </g:HTMLPanel>
</ui:UiBinder>
