<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="online.draughts.rus.client.resources.AppResources"/>

    <g:HTMLPanel ui:field="panel">
        <g:HTMLPanel addStyleNames="{res.style.playItemTop}">
            <b:Row>
                <b:Column size="XS_2 SM_2 MD_2 LG_2">
                    <b:Anchor ui:field="gameIdAnchor" icon="PLAY_CIRCLE" iconSize="TIMES2" text="Смотреть">
                        <ui:attribute name="text" description="Смотреть"/>
                    </b:Anchor>
                </b:Column>
                <b:Column size="XS_8 SM_8 MD_8 LG_8">
                    <g:HTMLPanel ui:field="whoAndWhenDidWin" addStyleNames="{res.style.whoAndWhenDidWin}">
                        <g:HTML ui:field="playEndDate" addStyleNames="{res.style.playEndDate}"/>
                        <g:HTML ui:field="whoDidWin" addStyleNames="{res.style.whoDidWin}"/>
                    </g:HTMLPanel>
                </b:Column>
                <!--<b:Column size="XS_2 SM_2 MD_2 LG_2">-->
                    <!--<b:Anchor ui:field="shareAnchor" icon="SHARE_ALT_SQUARE" iconSize="TIMES2" text="Поделиться"/>-->
                <!--</b:Column>-->
            </b:Row>
        </g:HTMLPanel>

        <b:Image ui:field="endGameScreenshot"/>
        <g:HTML ui:field="whitePlayerName" addStyleNames="{res.style.playItemPlayerName}"/>
        <g:HTML ui:field="blackPlayerName" addStyleNames="{res.style.playItemPlayerName}"/>
    </g:HTMLPanel>
</ui:UiBinder>
