@require "variables";
@require "mixins";

@external active;

body {
    background-color: #fffffe;
    color: black;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.mainContainer {
    margin-top: S_MAIN_CONTAINER_MARGIN_TOP;
}

.draughtsColumn {
    float: left;
}

.notationColumn {
    float: left;
    width: 200px;
    /*margin-left: 10px;*/
}

.playerList {
    float: left;
    margin-left: 20px;
    max-width: 295px;
}

.playerSearch {
    z-index: 0;
}

.alignHorizontal {
    margin: 0 auto;
    display: table;
}

/* NAVBAR */
.xLargeFont {
    font-size: x-large;
}

.largeFont {
    font-size: large;
}

.navbarTop {
@mixin trans(NAVBAR_CHANGE_DURATION);
@mixin height_and_line(S_NAVBAR_TOP_LINE_HEIGHT, S_NAVBAR_TOP_HEIGHT);
@mixin navbarCommon(C_NAVBAR, C_NAVBAR_BORDER);
}

.navbarScroll {
@mixin trans(NAVBAR_CHANGE_DURATION);
@mixin height_and_line(S_NAVBAR_SCROLL_LINE_HEIGHT, S_NAVBAR_SCROLL_HEIGHT);
@mixin navbarCommon(C_NAVBAR, C_NAVBAR_BORDER);
}

.navbarElemTop {
@mixin trans(NAVBAR_CHANGE_DURATION);
@mixin height_and_line(S_NAVBAR_TOP_LINE_HEIGHT, S_NAVBAR_TOP_HEIGHT);
@mixin navbarCommon(C_NAVBAR, C_NAVBAR_BORDER);
}

.navbarElemScroll {
@mixin trans(NAVBAR_CHANGE_DURATION);
@mixin height_and_line(S_NAVBAR_SCROLL_LINE_HEIGHT, S_NAVBAR_SCROLL_HEIGHT);
@mixin navbarCommon(C_NAVBAR, C_NAVBAR_BORDER);
}

.navbarTop li.active a {
    background: C_NAVBAR_ACTIVE_ITEM !important;
}

.navbarTop li a {
    color: C_NAVBAR_COLOR !important;
}

.navbarScroll li.active a {
    background: C_NAVBAR_ACTIVE_ITEM !important;
}

.navbarScroll li a {
    color: C_NAVBAR_COLOR !important;
}

.logoTop {
@mixin size(S_LOGO_TOP_HEIGHT, S_LOGO_TOP_HEIGHT);
@mixin trans(NAVBAR_CHANGE_DURATION);
}

.logoScroll {
@mixin size(S_LOGO_SCROLL_HEIGHT, S_LOGO_SCROLL_HEIGHT);
@mixin trans(NAVBAR_CHANGE_DURATION);
}

/* END NAVBAR*/

.playItem {
    background-color: #ddd;
    padding-left: 10px;
    padding-top: 8px;

    -ms-border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
}

