.dialogBox {
    -moz-border-radius: DIALOG_BORDER_RADIUS;
    -ms-border-radius: DIALOG_BORDER_RADIUS;
    -webkit-border-radius: DIALOG_BORDER_RADIUS;
    border-radius: DIALOG_BORDER_RADIUS;

    padding: 10px;
    background: rgba(200, 200, 200, .9);
}

.dialogCaptionInfo {
    -moz-border-radius: DIALOG_BORDER_RADIUS;
    -ms-border-radius: DIALOG_BORDER_RADIUS;
    -webkit-border-radius: DIALOG_BORDER_RADIUS;
    border-radius: DIALOG_BORDER_RADIUS;

    background: lightblue;
    font-size: 22px;
}

.dialogCaptionError {
    -moz-border-radius: DIALOG_BORDER_RADIUS;
    -ms-border-radius: DIALOG_BORDER_RADIUS;
    -webkit-border-radius: DIALOG_BORDER_RADIUS;
    border-radius: DIALOG_BORDER_RADIUS;

    background: lightcoral;
    font-size: 22px;
}

.whoDidWin {
    font-size: 12px;
    margin-right: 12px;
}

.playEndDate {
    font-size: 14px;
    margin-right: 12px;
}

.playItemPlayerName {
    font-size: 12px;
}

.dialogCaptionPlayer {
    -moz-border-radius: DIALOG_BORDER_RADIUS;
    -ms-border-radius: DIALOG_BORDER_RADIUS;
    -webkit-border-radius: DIALOG_BORDER_RADIUS;
    border-radius: DIALOG_BORDER_RADIUS;

    background: lightgreen;
    font-size: 14px;
}