.dialogBox {
    -moz-border-radius: DIALOG_BORDER_RADIUS;
    -ms-border-radius: DIALOG_BORDER_RADIUS;
    -webkit-border-radius: DIALOG_BORDER_RADIUS;
    border-radius: DIALOG_BORDER_RADIUS;

    padding: 10px;
    background: rgba(200, 200, 200, .9);
}

.dialogCaptionInfo {
    -moz-border-radius: DIALOG_BORDER_RADIUS;
    -ms-border-radius: DIALOG_BORDER_RADIUS;
    -webkit-border-radius: DIALOG_BORDER_RADIUS;
    border-radius: DIALOG_BORDER_RADIUS;

    background: lightblue;
    font-size: 22px;
}

.dialogCaptionError {
    -moz-border-radius: DIALOG_BORDER_RADIUS;
    -ms-border-radius: DIALOG_BORDER_RADIUS;
    -webkit-border-radius: DIALOG_BORDER_RADIUS;
    border-radius: DIALOG_BORDER_RADIUS;

    background: lightcoral;
    font-size: 22px;
}

.whoDidWin {
    font-size: 12px;
    margin-right: 12px;
    float: right;
}

.playEndDate {
    font-size: 14px;
    margin-right: 12px;
    float: right;
}

.playItemPlayerName {
    font-size: 12px;
}

.dialogCaptionPlayer {
    -moz-border-radius: DIALOG_BORDER_RADIUS;
    -ms-border-radius: DIALOG_BORDER_RADIUS;
    -webkit-border-radius: DIALOG_BORDER_RADIUS;
    border-radius: DIALOG_BORDER_RADIUS;

    background: lightgreen;
    font-size: 14px;
    margin-bottom: 12px;
}

.emulatorDraughtsBeaten {
    font-size: 14px;
    font-style: italic;
}

.playerControls {
    margin-bottom: 12px;
}

.playerDismiss {
    margin-top: 3px;
}

.leftSymbols {
    font-size: 14px;
    margin-top: 8px;
}

.notationCurrentStyle {
    -moz-border-radius: NOTATION_CURRENT_BORDER_RADIUS;
    -ms-border-radius: NOTATION_CURRENT_BORDER_RADIUS;
    -webkit-border-radius: NOTATION_CURRENT_BORDER_RADIUS;
    border-radius: NOTATION_CURRENT_BORDER_RADIUS;

    background: white;
}

.notationStrokeStyle {
    cursor: pointer;
}

.gameCommentPanel {
    font-size: 14px;
}

.strokeCommentPanel {
    font-size: 14px;
}

.whoAndWhenDidWin {
    max-width: 300px;
}