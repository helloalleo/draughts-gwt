.rowHeight {
    display: table;
    table-layout: fixed;
    height: 100%;
    width: 100%;
}

.colHeight {
    display: table-cell;
    float: none;
    height: 100%;
}

.colMiddle {
    vertical-align: middle;
}

.inside {
    margin-top: 20px;
    margin-bottom: 20px;
