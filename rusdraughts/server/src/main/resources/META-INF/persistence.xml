<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="draughtsPU" transaction-type="RESOURCE_LOCAL">
        <description>Draughts Persistence Unit</description>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>online.draughts.rus.shared.model.Game</class>
        <class>online.draughts.rus.shared.model.GameMessage</class>
        <class>online.draughts.rus.shared.model.Move</class>
        <class>online.draughts.rus.shared.model.Player</class>
        <class>online.draughts.rus.shared.model.Friend</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.connection.driver_class" value="${db.driver}"/>
            <property name="hibernate.connection.username" value="${db.user}"/>
            <property name="hibernate.connection.password" value="${db.passwd}"/>
            <property name="hibernate.connection.url" value="${db.url}"/>
            <property name="hibernate.connection.pool_size" value="0"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
        </properties>
    </persistence-unit>
</persistence>
